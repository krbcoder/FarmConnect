@model  ExpeditionHackathon.Models.ViewModels.ItemViewModel<string, string, string>

@{
    ViewBag.Title = "Home Page";
}


<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Farmer's Network</title>

    <!-- Bootstrap Core CSS -->
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- MetisMenu CSS -->
    <link href="~/assets/vendor/metisMenu/metisMenu.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="~/assets/dist/css/sb-admin-2.css" rel="stylesheet">  

    <!-- Morris Charts CSS -->
    <link href="~/assets/vendor/morrisjs/morris.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="~/assets/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">



    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <style>
        /* Always set the map height explicitly to define the size of the div
                 * element that contains the map. */
        #map {
            height: 400px;
        }
        /* Optional: Makes the sample page fill the window. */
        html, body {
            height: 400px;
            margin: 0;
            padding: 0;
        }
        .plantButton {
            border-style: solid;
            border-width: 3px;
            border-color: darkslategray;
        }
        .plantButton:hover {
            filter: opacity(60%);
        }
        .mapBox {
            box-shadow: 0 6px 9px 0 rgba(0, 0, 0, 0.38), 0 9px 25px 0 rgba(0, 0, 0, 0.38);
        }
        div.card {
            background-color: rgba(214, 255, 215, 0.41);
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
            text-align: center;
            box-shadow: inset 0 0 45px #3d3d3d;
            height:400px;
        }
        .iconClass {
            text-shadow: 4px 4px 15px #000000;
        }
    </style>
</head>

<div id="wrapper" ng-controller="testController as test">

    <div id="page-wrapper">

        <!-- /.row -->
        <div class="row">
            <div class="col-lg-6">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header"><strong>Your Location </strong><i class="fa fa-location-arrow" style="color: rgb(193, 0, 0)"></i></h1>
                        <div class="mapBox" id="map"></div>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
               
            </div>
            <div class="col-lg-6" ng-controller="mapsController as mapsCtrl">
                <div class="row">
                    <div class="col-lg-12" style="">
                        <h1 class="page-header"><strong>Your Agricultural Zone </strong><i class="fa fa-leaf" style="color: rgb(6, 200, 51)"></i></h1>

                        <div class="card" style="padding:20px" ngcloak>
                            <h3>Zone: {{mapsCtrl.climateZoneInfo.Id}} - {{mapsCtrl.climateZoneInfo.Name}}</h3>
                            <hr style="color:black; height: 5px" />
                            <h4>{{mapsCtrl.climateZoneInfo.Description}}</h4>

                            <i class="glyphicon {{mapsCtrl.climateZoneInfo.ImageUrl}} iconClass" style="color:{{mapsCtrl.climateZoneInfo.Color}}; font-size:10em"; padding: 25px></i>
                        </div>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>

            </div>
        </div>
        <br />
        <br />
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 center text-center" style="margin-bottom: 20px">
                <h1>Select Your Crop</h1>
            </div>
        </div>
        <!-- /.row -->
        <div class="row" ng-controller="buttonController as buttonCtrl">
            <div class="col-lg-4 col-md-6" style="padding: 20px;">
                <div class="panel panel-primary plantButton mapBox" ng-click="buttonCtrl.navigate(1)" style="cursor:pointer">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i style="font-size:6em;" class="huge glyphicon glyphicon-grain"></i>
                            </div>
                            <div class="col-xs-3">
                                <i style="font-size:3em;" class="glyphicon glyphicon-tint"></i>
                            </div>
                            <div class="col-xs-5 text-right">
                                <div class="huge">Wheat</div>
                                <div>Rain-fed</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6" style="padding: 20px;">
                <div class="panel panel-green plantButton mapBox" ng-click="buttonCtrl.navigate(2)" style="cursor:pointer">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i style="font-size:6em;" class="fa fa-pagelines"></i>
                            </div>
                            <div class="col-xs-3">
                                <i style="font-size:3em;" class="glyphicon glyphicon-tint"></i>
                            </div>
                            <div class="col-xs-5 text-right">
                                <div class="huge">Barley</div>
                                <div>Rain-fed</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6" style="padding: 20px;">
                <div class="panel panel-yellow plantButton mapBox" ng-click="buttonCtrl.navigate(3)" style="cursor:pointer">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i style="font-size:6em;" class="huge glyphicon glyphicon-grain"></i>
                            </div>
                            <div class="col-xs-5 col-xs-offset-3 text-right">
                                <div class="huge">Wheat</div>
                                <div>Irrigated</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
    <!-- /#page-wrapper -->

</div>
<!-- /#wrapper -->
<!-- jQuery -->

<script src="~/assets/vendor/jquery/jquery.min.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="~/assets/vendor/bootstrap/js/bootstrap.min.js"></script>

<!-- Metis Menu Plugin JavaScript -->
<script src="~/assets/vendor/metisMenu/metisMenu.min.js"></script>

<!-- Morris Charts JavaScript -->
<script src="~/assets/vendor/raphael/raphael.min.js"></script>
<script src="~/assets/vendor/morrisjs/morris.min.js"></script>
<script src="~/assets/data/morris-data.js"></script>


<!-- Custom Theme JavaScript -->
<script src="~/assets/dist/js/sb-admin-2.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB0YQzZkHg2_uFxrgbWh4En4D1UmDjHxho">
</script>



@section scripts {


    <script>

        (function () {

            "use strict"

            angular.module("app").controller("testController", TestController);

            TestController.$inject = ["$log", "$scope"];

            function TestController($log, $scope) {

                var vm = this;
                vm.information = {};
                vm.information.name = "@Model.Item1";
                vm.information.latitude = @Model.Item2;
                vm.information.longitude = @Model.Item3;

                console.log(vm.information);

                vm.test = "TEST TEST TEST TEST";
            }
        }());

        (function () {

            "use strict"

            angular.module("app").controller("buttonController", ButtonController);

            ButtonController.$inject = ["$scope"];

            function ButtonController($scope) {

                var vm = this;
                vm.information = {};
                vm.navigate = _navigate;

                function _navigate(cropId) {
                    vm.zoneId = coldroom.page.userClimateZoneId;
                    vm.userweatherId = coldroom.page.userClosestWeatherStationId;
                    window.location = "/crop/"+cropId+"/zone/"+vm.zoneId+"/weatherstation/"+vm.userweatherId;
                }

            }
            
        }());
    </script>
<script>
                    coldroom.page.userLat = @Model.Item2;
                    coldroom.page.userLng = @Model.Item3;

</script>
<script src="~/Scripts/coldroom.services.climateZones.js"></script>
<script src="~/Scripts/app/mapsController.js"></script>
<script src="~/Scripts/maps-javascript.js"></script>
}
